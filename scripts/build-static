#!/bin/bash
set -e

# cd to app root
CWD=$(dirname $0)
if [[ `basename $(pwd)` = 'scripts' ]]; then
  cd ../
else
  cd `dirname $CWD`
fi

# Why are you trying to do a build when there are uncommitted changes?
if [[ `git status --porcelain` ]]; then
  echo "There are uncommited changes.  Please check the number and try again."
#  exit 1;
fi

# Parse options
BRANCH=$(git symbolic-ref HEAD | sed -e "s/^refs\/heads\///")
PKG_VERSION=$(cat package.json | grep version | cut -f4 -d'"' | sed 's/-/_/g')
LATEST=0
UPLOAD=0
TAG=0
while getopts "ltu" opt;do
    case $opt in
    l)
        LATEST=1
        ;;
    t)
        TAG=1
        ;;
    u)
        UPLOAD=1
        ;;
    \?)
        echo "Invalid arguemnts"
        print_help
        exit 1
        ;;
    :)
        echo "Option -${OPTARG} requires an argument." >&2
        print_help
        exit 1
        ;;
    esac
    shift 1
done

# UPLOAD_LATEST=true is set by Drone for auto upload to CDN
if [[ "${BRANCH}" == "master" ]] && [[ "${UPLOAD_LATEST}" == "true" ]]; then
  UPLOAD=2
  LATEST=1
fi

# Sanity checking
if [[ $LATEST -eq 1 ]] && [[ $TAG -eq 1 ]]; then
  echo "You can't tag latest."
  exit 1
fi

if ( [[ $TAG -eq 1 ]] || [[ $UPLOAD -ne 0 ]] ) && [[ "${BRANCH}" != "master" ]]; then
  echo "You can only tag or upload the master branch (you are on '${BRANCH}')."
  exit 1
fi

if [[ $LATEST -eq 1 ]]; then
  VERSION="latest"
else
  VERSION=${PKG_VERSION}
fi

ENVIRONMENT="production"
BUILD_DIR="dist/static/${VERSION}"
CDN="cdn.rancher.io/ui"
URL="/static"

echo "Branch: ${BRANCH}"
if [[ "${VERSION}" != "${PKG_VERSION}" ]]; then
  echo "Package Version: ${PKG_VERSION}"
fi
echo "Version: ${VERSION}"
echo "Build Dir: ${BUILD_DIR}"
echo "Options: Latest=${LATEST}, Tag=${TAG}, Upload=${UPLOAD}"

echo "Testing..."
exec npm test

echo "Building..."
RANCHER_ENDPOINT="" BASE_URL="${URL}" BASE_ASSETS="//${CDN}/${VERSION}" exec npm build --environment=${ENVIRONMENT} --output-path=${BUILD_DIR}

# Create a file containing the version
echo "${PKG_VERSION}" > ${BUILD_DIR}/VERSION

# Replace the version token in the static file that cattle serves up
sed -i.bak s/VERSION/${VERSION}/g "${BUILD_DIR}/static/index.html"

if [[ $TAG -eq 1 ]]; then
  exec git tag v${VERSION}
  exec git push --tags
fi

# For use on your laptop, manually
if [[ $UPLOAD -eq 1 ]]; then
  echo "Uploading..."
  exec gsutil -m cp -R ${BUILD_DIR} "gs://${CDN}"
fi

# For use from Drone, automatically
if [[ $UPLOAD -eq 2 ]]; then
  echo "Updating latest thru Docker..."
  exec docker run --rm -v ${BUILD_DIR}:/latest google/cloud-sdk gsutil -m rsync -r /latest "gs://${CDN}/latest"
fi

# -------------------------------------

# Execute something ane exit if it fails
function exec() {
  $@
  if [[ $? -ne 0 ]]; then
    echo "Command: $@ failed"
    exit 2
  fi
}

