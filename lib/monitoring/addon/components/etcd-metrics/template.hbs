<section>
  {{metrics-action
    queryAction=(action "query")
    state=state
  }}

  {{#if single.length}}
    <div class="row">
      <div class="col span-12 pl-20">
        <div class="row banner bg-info basics">
          <div class="vertical-middle">
            <label class="acc-label vertical-middle p-0">
              {{t "etcd.hasLeader.label"}}:
            </label>
            {{#if hasLeader}}
              {{t "generic.yes"}}
            {{else}}
              {{t "generic.no"}}
            {{/if}}
          </div>

          <div class="vertical-middle">
            <label class="acc-label vertical-middle p-0">
              {{t "etcd.leaderChange.label"}}:
            </label>
            {{leaderChange}}
          </div>

          <div class="vertical-middle">
            <label class="acc-label vertical-middle p-0">
              {{t "etcd.failedProposals.label"}}:
            </label>
            {{failedProposals}}
          </div>
        </div>
      </div>
    </div>
  {{/if}}

  {{metrics-graph
    graphs=graphs
    loading=state.loading
    noGraphs=state.noGraphs
  }}
</section>