<section class="header">
  <h1>{{t "modalRevertSettings.title" setting=setting.id}}</h1>
</section>
<section>

  <div class="modal-content row">
    <div class="col span-12">
      <label class="acc-label">{{t "modalRevertSettings.current"}}</label>
      <div>
        {{setting.value}}
      </div>
    </div>
    <div class="col span-12">
      <label class="acc-label">{{t "modalRevertSettings.default"}}</label>
      <div>
        {{setting.default}}
      </div>
    </div>
  </div>
</section>

{{save-cancel
  save="save"
  cancel="done"
  createLabel="generic.save"
}}
{{top-errors errors=errors}}
