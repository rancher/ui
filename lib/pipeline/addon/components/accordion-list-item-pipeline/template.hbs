<div class="accordion-header header-pipeline {{statusClass}}" {{action expand this}}>
  <div class="expand"><i role="button" class="icon icon-play eased btn text-small p-10 {{if expanded 'icon-rotate-90'}}"></i></div>
  <div class="title">
    <span class="text-cell">{{title}}</span>
    <span class="text-cell">
      <i class="icon" class={{pipeline-status-to-icon status}}></i>&nbsp;{{t displayState}}
    </span>
  </div>
  <div class="badge-state">
    <p class="mt-0 mb-0"><i class="icon icon-history"></i>&nbsp;{{duration}}&nbsp;seconds</p>
  </div>
</div>
<div class="accordion-content content-pipeline {{unless expanded 'hide'}}">
  {{yield this}}
</div>
