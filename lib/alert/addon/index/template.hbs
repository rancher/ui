{{#if scope.currentCluster.isReady}}
  {{#banner-message color="bg-warning"}}
    <p>{{t 'banner.alerting' dashboardLink=scope.dashboardLink docsBase=scope.docsBase htmlSafe=true}}</p>
  {{/banner-message}}
{{/if}}

<section class="header">
  <h1 class="text-capitalize">{{if (eq pageScope 'cluster') (t 'alertPage.cluster') (t 'alertPage.project')}}
    {{t 'alertPage.alertGroups'}}
  </h1>
  <div class="right-buttons">
    {{#link-to "new" classNames="btn bg-primary"}}{{t 'alertPage.index.addAlertGroup'}}{{/link-to}}
  </div>
</section>

{{alert-table alerts=model.alerts notifiers=model.notifiers groups=model.groups}}
