                    @path="rancherKubernetesEngineConfig.kubernetesVersion"
                    @configVariable={{config.kubernetesVersion}}
                    @addOverride={{action "addOverride"}}
                    @questions={{model.clusterTemplateRevision.questions}}
                  />
                {{/if}}
              </label>

