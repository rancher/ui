{{#if (or app.isCaas settings.isRancher)}}
  {{#if projectId}}
    <a href="{{href-to 'authenticated.project.help' projectId}}" role="button" class="btn btn-sm bg-transparent">{{t 'pageFooter.help'}}</a>
  {{/if}}
  <a role="button" class="btn btn-sm bg-transparent" target="blank" rel="nofollow noreferer" href="{{settings.issueUrl}}">{{t 'pageFooter.issues'}}</a>
  <a role="button" class="btn btn-sm bg-transparent" target="blank" rel="nofollow noreferer" href="{{forumBase}}">{{t 'pageFooter.forums'}}</a>
  <a role="button" class="btn btn-sm bg-transparent" target="blank" rel="nofollow noreferer" href="{{slackBase}}">{{t 'pageFooter.slack'}}</a>
  {{#if showWechat}}
    <a class="btn btn-sm bg-transparent" {{action "showWechat"}}>{{t 'modalWechat.wechat'}}</a>
  {{/if}}
{{/if}}

