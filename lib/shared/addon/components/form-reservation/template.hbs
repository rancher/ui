<div class="row">
  <div class="col span-6">
    <label class="acc-label">
      {{t "formReservation.limitCpu.label" component=component}}
    </label>
    <div class="input-group">
      {{input-integer
        min="0"
        step="100"
        value=limitCpu
        classNames="form-control"
        placeholder=(t "formReservation.limitCpu.placeholder")
      }}
      <div class="input-group-addon bg-default">
        {{t "units.cpu"}}
      </div>
    </div>
  </div>
  <div class="col span-6">
    <label class="acc-label">
      {{t "formReservation.limitMemory.label" component=component}}
    </label>
    <div class="input-group">
      {{input-integer
        min="4"
        step="1"
        value=limitMemory
        classNames="form-control"
        placeholder=(t "formReservation.limitMemory.placeholder")
      }}
      <div class="input-group-addon bg-default">
        {{t "generic.mibibyte"}}
      </div>
    </div>
  </div>
</div>

