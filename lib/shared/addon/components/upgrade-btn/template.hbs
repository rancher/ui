{{#if hasBlock}}
  {{yield this}}
{{else}}
  {{#if currentVersion}}
    {{#tooltip-element
       type="tooltip-basic"
       model=currentVersion
       tooltipTemplate="tooltip-static"
       aria-describedby="tooltip-base"
       tooltipFor="upgrade"
    }}
      {{t (concat "upgradeBtn.status." upgradeStatus)}}
    {{/tooltip-element}}
  {{else}}
    {{t (concat "upgradeBtn.status." upgradeStatus)}}
  {{/if}}
{{/if}}
