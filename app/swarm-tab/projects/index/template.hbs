<section class="header">
  <h1>{{t 'swarmPage.projects.index.header'}}</h1>

  {{#link-to "swarm-tab.projects.new" classNames="btn btn-sm btn-primary"}}{{t 'swarmPage.projects.index.linkTo'}}{{/link-to}}
</section>

<section class="well instances">
  <table class="grid fixed" style="margin-bottom: 0;">
    <thead>
      <tr>
        {{sortable-th sortable=this action="changeSort" name="state" width="125" label="generic.state"}}
        {{sortable-th sortable=this action="changeSort" name="name" label="generic.name"}}
        {{sortable-th sortable=this action="changeSort" name="services" width="100" label='swarmPage.projects.index.table.header.services'}}
        <th class="actions" width="85">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each arranged as |project|}}
        {{swarm/project-row model=project}}
      {{else}}
        <tr><td colspan="4" class="text-center text-muted">{{t 'swarmPage.projects.index.table.body.noData'}}</td></tr>
      {{/each}}
    </tbody>
  </table>
</section>

