<section class="header">
  <h1>Projects</h1>

  {{#link-to "swarm-tab.projects.new" classNames="btn btn-sm btn-primary"}}Add Project{{/link-to}}
</section>

<section class="well instances">
  <table class="grid fixed" style="margin-bottom: 0;">
    <thead>
      <tr>
        {{sortable-th sortable=this action="changeSort" name="state" width="125" label="State"}}
        {{sortable-th sortable=this action="changeSort" name="name"}}
        {{sortable-th sortable=this action="changeSort" name="services" width="100"}}
        <th class="actions" width="85">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each arranged as |project|}}
        {{swarm/project-row model=project}}
      {{else}}
        <tr><td colspan="4" class="text-center text-muted">You do not have any Projects yet.</td></tr>
      {{/each}}
    </tbody>
  </table>
</section>

