<section class="header r-pt20 clearfix">
  <h1>{{#link-to "applications-tab"}}Project:{{/link-to}}</h1>
  {{#power-select options=model.projects selected=model.project onchange=(action "changeProject") searchField="displayName" as |obj|}}
    <div class="clip r-mr15">
      {{select-dot model=obj}}
    </div>
  {{/power-select}}

  <div class="pull-right">
    {{action-menu model=model.project classNames="r-ml5 pull-right" size="sm"}}
    {{header-state model=model.project classNames="pull-right"}}
  </div>
</section>

<section class="well instances">
  <table class="grid fixed r-mb0">
    <thead>
      <tr>
        {{sortable-th sortable=this action="changeSort" name="state" width="125" label="State"}}
        {{sortable-th sortable=this action="changeSort" name="name"}}
        <th>Ports</th>
        {{sortable-th sortable=this action="changeSort" name="containers" width="100"}}
        <th class="actions" width="85">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each arranged as |service|}}
        {{swarm/service-row model=service}}
      {{else}}
        <tr><td colspan="7" class="text-center text-muted">This Project does not have any Services yet.</td></tr>
      {{/each}}
    </tbody>
  </table>
</section>
