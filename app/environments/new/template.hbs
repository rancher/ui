<section class="header">
  <h1>{{#if editing}}Edit{{else}}Add{{/if}} Stack</h1>
</section>

<section class="horizontal-form container-fluid well">
  {{top-errors errors=errors}}

  {{form-name-description
    model=primaryResource
    namePlaceholder="e.g. myapp"
    descriptionPlaceholder="e.g. MyApp Stack"
  }}

  <div class="over-hr"><span>Optional: Import Compose</span></div>
  <div class="row form-group">
      <div class="form-group">
        <div class="col-sm-12 col-md-6">
          <div class="clearfix r-mb10 r-mt15">
            <label class="r-pt5">Optional: docker-compose.yml</label>
          </div>
          {{input-text-file
            accept=".yml, .yaml"
            value=primaryResource.dockerCompose
            placeholder="Contents of docker-compose.yml"
          }}
        </div>
        <div class="col-sm-12 col-md-6">
          <div class="clearfix r-mb10 r-mt15">
            <label class="r-pt5">Optional: rancher-compose.yml</label>
          </div>
          {{input-text-file
            accept=".yml, .yaml"
            value=primaryResource.rancherCompose
            placeholder="Contents of rancher-compose.yml"
          }}
        </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-12 r-mt10">
        <label class="form-control-static">{{input type="checkbox" checked=primaryResource.startOnCreate}} Start services after creating</label>
      </div>
    </div>
  </div>

  <div class="alert alert-info r-mb0">
    <i class="icon icon-info" /> You can always define additional services later
  </div>
</section>

{{partial "save-cancel"}}
