<div style="max-width: 360px; margin: 100px auto 0 auto;">
  <div class="farm-box login top-colors">
    {{#if settings.appName}}
      {{format-html-message 'loginPage.greeting'
        appName=settings.appName}}
    {{else}}
      {{format-html-message 'loginPage.greetingWhiteLabel'}}
    {{/if}}
    <div class="logo"></div>
    <section>
      {{!-- {{language-dropdown class='r-mt10 r-mb10'}}--}}
      <br/>
      {{#if isGithub}}
        <p>{{t 'loginPage.githubMessage' appName=settings.appName}}</p>
        <br/>
      {{/if}}

      {{#if infoMsg}}
        <div class="alert {{if errorMsg 'alert-danger' 'alert-warning'}}" role="alert">{{infoMsg}}</div>
      {{/if}}

      {{#if (or isLocal isActiveDirectory isOpenLdap)}}
        {{login-user-pass action="authenticate" waiting=waiting}}
      {{/if}}
      {{#if isGithub}}
        {{login-github action="started" waiting=waiting}}
      {{/if}}
    </section>
  </div>
</div>
