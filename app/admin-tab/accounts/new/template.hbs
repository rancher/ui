<section class="header clearfix">
  <h1>{{t 'accountsPage.new.header'}}</h1>
</section>

<section class="horizontal-form container-fluid">
  <div class="row inline-form">
    <div class="col span-3 col-inline">
      <label>{{t 'accountsPage.new.form.username.labelText'}}*</label>
    </div>
    <div class="col span-7">
      {{input type="text" value=model.credential.publicValue classNames="form-control" placeholder=(t 'accountsPage.new.form.username.placeholder')}}
    </div>
  </div>

  <div class="row inline-form">
    <div class="col span-3 col-inline">
      <label>{{t 'accountsPage.new.form.password.labelText'}}*</label>
    </div>
    <div class="col span-7">
      {{schema/input-password value=model.credential.secretValue}}
      <div class="text-info">{{validateDescription}}</div>
    </div>
  </div>

  <div class="row inline-form">
    <div class="col span-3 col-inline">
      <label>{{t 'accountsPage.new.form.name.labelText'}}</label>
    </div>
    <div class="col span-7">
      {{input type="text" value=model.account.name classNames="form-control" placeholder=(t 'accountsPage.new.form.name.placeholder')}}
    </div>
  </div>

  <div class="row inline-form">
    <div class="col span-3 col-inline">
      <label>{{t 'accountsPage.new.form.type.labelText'}}</label>
    </div>
    <div class="col span-7">
      {{new-select
        classNames="form-control"
        content=accountTypeChoices
        localizedLabel=true
        value=model.account.kind
      }}
    </div>
  </div>

  <div class="row inline-form">
    <div class="col span-3 col-inline">
      <label for="description">{{t 'accountsPage.new.form.description.labelText'}}</label>
    </div>
    <div class="col span-7">
      {{textarea value=model.account.description classNames="form-control no-resize" rows="2" placeholder=(t 'accountsPage.new.form.description.placeholder')}}
    </div>
  </div>

</section>

{{top-errors errors=errors}}
{{save-cancel save="save" cancel="cancel"}}
