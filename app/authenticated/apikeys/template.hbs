<section class="header">
  <h1>
    API Keys
  </h1>

  <button class="btn btn-sm btn-primary" {{action "newApikey"}}>Add API Key</button>
</section>

<section class="well">
  <label>Endpoint for &quot;{{project.displayName}}&quot; Environment:</label>
  <div>
    <a href="{{endpointWithAuth}}" target="_blank">{{displayEndpoint}}</a>
  </div>
</section>

<section class="well">
  <table class="grid fixed" style="margin-bottom: 0">
    <thead>
      <tr>
        {{sortable-th sortable=this action="changeSort" name="state" width="125"}}
        {{sortable-th sortable=this action="changeSort" name="name"}}
        {{sortable-th sortable=this action="changeSort" name="description"}}
        {{sortable-th sortable=this action="changeSort" name="publicValue" label="Username"}}
        {{sortable-th sortable=this action="changeSort" name="created"}}
        <th width="50">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each arranged as |key|}}
        {{apikey-row model=key}}
      {{else}}
        <tr><td colspan="6" class="text-center text-muted">You don't have any API keys yet.</td></tr>
      {{/each}}
    </tbody>
  </table>
</section>
