<section class="header">
  <h1>
    {{t "clustersPage.editClusterName" name=model.originalCluster.displayName}} ({{model.originalCluster.displayProvider}})
  </h1>
</section>

<BannerMessage
  @color="bg-warning"
  @icon="icon-alert"
  @message={{t "clustersPage.emberDeprecationMessage" htmlSafe=true}}
/>

<CruCluster
  @applyClusterTemplate={{not (is-empty clusterTemplateRevision)}}
  @clusterTemplateRevisionId={{mut clusterTemplateRevision}}
  @model={{model}}
  @initialProvider={{cluster.clusterProvider}}
  @provider={{provider}}
  @mode="edit"
  @close={{action "close"}}
/>
