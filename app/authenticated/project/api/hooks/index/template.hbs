<div class="banner bg-info m-0 p-0">
  <div class="banner-icon" style="width: 68px;"><span class="icon icon-2x icon-notification"></span></div>
  <div class="banner-message">
    <p class="mt-15 mb-15">
      Experimental: More webhook features will be added in future releases, and the existing capabilities may change.
    </p>
  </div>
</div>

<section class="header clearfix">
  <h1>{{t 'hookPage.receiver.header'}}</h1>

  {{#link-to "authenticated.project.api.hooks.new-receiver" class="btn btn-sm bg-primary"}}{{t 'hookPage.receiver.buttonText'}}{{/link-to}}
</section>

<section class="well">
  <p>{{t 'hookPage.receiver.content' appName=settings.appName}}</p>
  <table class="grid fixed r-mb0 r-mt10">
    <thead>
      <tr>
        {{sortable-th sortable=this action="changeSort" name="state" width="121" label="generic.state"}}
        {{sortable-th sortable=this action="changeSort" name="name" label="generic.name"}}
        {{sortable-th sortable=this action="changeSort" name="kind" label="hookPage.fields.kind.label"}}
        <th>{{t 'hookPage.fields.detail.label'}}</th>
        <th width="100">{{t 'hookPage.fields.url.label'}}</th>
        <th width="75">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each arranged as |row|}}
        {{hook-row model=row}}
      {{else}}
        <tr><td colspan="6" class="text-center text-muted">{{t 'hookPage.receiver.noData'}}</td></tr>
      {{/each}}
    </tbody>
  </table>
</section>
