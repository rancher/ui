<section class="header clearfix">
  <h1>{{t 'registriesPage.index.header'}}</h1>

  <div class="right-buttons">
    {{#link-to "registries.new" classNames="btn btn-sm bg-primary"}}{{t 'registriesPage.index.linkTo'}}{{/link-to}}
  </div>
</section>

<section class="instances">
  {{#sortable-table
       classNames="grid fixed mb-0 sortable-table"
       bulkActions=false
       paging=false
       search=false
       sortBy=sortBy
       headers=headers
       body=model
       as |sortable kind registry|
  }}
    {{#if (eq kind "row")}}
      {{registry-row model=registry}}
    {{else if (eq kind "norows")}}
      <tr>
        <td colspan="{{headers.length}}" class="text-center text-muted">{{t 'registriesPage.index.table.body.noData'}}</td>
      </tr>
    {{/if}}
  {{/sortable-table}}
</section>
