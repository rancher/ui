<section class="header clearfix">
  <h1>{{t 'registriesPage.index.header'}}</h1>

  {{#link-to "registries.new" classNames="btn btn-sm btn-primary"}}{{t 'registriesPage.index.linkTo'}}{{/link-to}}
</section>

<section class="well instances">
  <table class="grid fixed" style="margin-bottom: 0">
    <thead>
      <tr>
        {{sortable-th sortable=this action="changeSort" name="state" label='registriesPage.index.table.header.state' width="125"}}
        {{sortable-th sortable=this action="changeSort" name="address" label='registriesPage.index.table.header.address'}}
        {{sortable-th sortable=this action="changeSort" name="username" label='registriesPage.index.table.header.username'}}
        {{sortable-th sortable=this action="changeSort" name="created" label='registriesPage.index.table.header.created'}}
        <th width="75">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each arranged as |registry|}}
        {{registry-row model=registry}}
      {{else}}
        <tr><td colspan="6" class="text-center text-muted">{{t 'registriesPage.index.table.body.noData'}}</td></tr>
      {{/each}}
    </tbody>
  </table>
</section>
