<section class="header">
  <h1>Registries</h1>

  {{#link-to "registries.new" classNames="btn btn-sm btn-primary"}}Add Registry{{/link-to}}
</section>

<section class="well instances">
  <table class="grid fixed" style="margin-bottom: 0">
    <thead>
      <tr>
        {{sortable-th sortable=this action="changeSort" name="state" width="125"}}
        {{sortable-th sortable=this action="changeSort" name="address"}}
        {{sortable-th sortable=this action="changeSort" name="email"}}
        {{sortable-th sortable=this action="changeSort" name="username"}}
        {{sortable-th sortable=this action="changeSort" name="created"}}
        <th width="75">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each arranged as |registry|}}
        {{registry-row model=registry}}
      {{else}}
        <tr><td colspan="6" class="text-center text-muted">You don't have any registries yet.</td></tr>
      {{/each}}
    </tbody>
  </table>
</section>
