<section class="header">
  <h1>Add Registry</h1>
</section>
<section class="horizontal-form container-fluid">
  {{top-errors errors=errors}}

  <section class="well">
    <div class="nav nav-boxes checked-active">
      {{#each drivers as |driver|}}
        <a href="false" {{action "selectDriver" driver.name}} alt={{driver.label}} class="nav-box-item driver registry-driver {{if driver.active 'active'}} {{driver.css}}"></a>
      {{/each}}
    </div>
  </section>
</section>

<section class="horizontal-form container-fluid" role="tabpanel">
  {{#if isCustom}}
    <div class="row form-group">
      <div class="col-sm-12 col-md-2 form-label form-control-static">
        <label>Address{{#if isCustom}}*{{/if}}</label>
      </div>
      <div class="col-sm-12 col-md-8">
        {{input type="text" value=model.registry.serverAddress classNames="form-control" placeholder="e.g. registry.example.com"}}
      </div>
    </div>
  {{/if}}

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label form-control-static">
      <label>Email*</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{input type="text" class="form-control email" value=model.credential.email placeholder="e.g. you@example.com"}}
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label form-control-static">
      <label>Username</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{input type="text" class="form-control" value=model.credential.publicValue placeholder="e.g. username"}}
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label form-control-static">
      <label>Password</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{input type="password" class="form-control" value=model.credential.secretValue placeholder="e.g. password"}}
    </div>
  </div>
</section>

{{save-cancel save="save" cancel="cancel"}}
