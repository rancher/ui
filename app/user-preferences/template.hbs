<section class="header clearfix">
  <h1>{{t 'userPreferencesPage.header'}}</h1>
</section>
<section class="row">
  <div class="col span-11-of-23 mt-0 mb-0">
    {{settings/theme-toggle}}
    <hr class="mt-20 mb-20" />
    {{settings/table-rows}}
  </div>
  <div class="col offset-1-of-23 span-11-of-23 mt-0 mb-0">
    {{settings/user-info account=model.account}}
    {{#if isCaas}}
      {{settings/billing-info cards=model.stripeCards account=model.account}}
    {{/if}}
  </div>
</section>
