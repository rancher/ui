<table class="grid fixed" style="margin-bottom: 0;">
  <thead>
    <tr>
      {{sortable-th sortable=this action="changeSort" name="state" label='hostsPage.hostPage.storageTab.table.header.state' width="125"}}
      {{sortable-th sortable=this action="changeSort" name="hostPath" label='hostsPage.hostPage.storageTab.table.header.hostPath'}}
      <th> {{t 'hostsPage.hostPage.storageTab.table.header.hostPath'}}</th>
      <th class="actions" width="75">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {{#each arranged as |volume|}}
      {{volume-row model=volume}}
    {{else}}
      <tr><td colspan="4" class="text-center text-muted">{{t 'hostsPage.hostPage.storageTab.table.body.noData'}}</td></tr>
    {{/each}}
  </tbody>
</table>
