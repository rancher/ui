<section class="header">
  <h1>{{t 'storagePoolsPage.newVolume.header'}}</h1>
</section>
<section class="horizontal-form container-fluid">
  {{top-errors errors=errors}}

  {{form-name-description model=model.volume}}

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label">
      <label class="form-control-static">{{t 'storagePoolsPage.newVolume.form.driverOptions'}}</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{form-key-value
        changed=(action (mut model.driverOpts))
        nameLabel='storagePoolsPage.newVolume.form.addActionLabel'
      }}
    </div>
  </div>

</section>

{{save-cancel save="save" cancel="cancel"}}
