<h4>{{t 'confirmDelete.title'}}:</h4>

<div style="margin: 30px 10px;">
  {{#each resources as |resource|}}
    <h3>{{resource.displayName}}</h3>
  {{/each}}
</div>

{{#if isEnvironment}}
  <div class="r-mb15">
    {{t 'confirmDelete.environmentNote' appName=settings.appName}}
  </div>
{{/if}}

<div class="text-muted" style="font-size: 12px;">
  {{t 'confirmDelete.protip' key=alternateLabel}}
</div>

<div class="footer-actions">
  <button {{action "confirm"}} class="btn btn-danger">{{t 'confirmDelete.confirmAction'}}</button>
  <button {{action "cancel"}} class="btn btn-link">{{t 'confirmDelete.cancelAction'}}</button>
</div>
