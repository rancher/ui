{{#unless isActions}}
  <button class="btn bg-transparent lacsso">
    {{#if hasBlock}}{{yield}}{{else}} {{#if translationKey}} {{t translationKey}} {{else}} {{label}} {{/if}}{{/if}}
    <span class="icon-stack">
      <i class="icon icon-sort icon-stack-1x faded"></i>
      {{#if activeAscending}}
        <i class="icon icon-sort-down icon-stack-1x"></i>
      {{else}}
        {{#if activeDescending}}
          <i class="icon icon-sort-up icon-stack-1x"></i>
        {{/if}}
      {{/if}}
    </span>
  </button>
{{/unless}}
