{{yield}}
{{#if showPrimary}}
  {{#each model.primaryActions as |act index|}}
    <button class="btn btn-default btn-{{size}}" data-primary="{{index}}" aria-label="{{t act.label}}">
      <span class="visible-xs-inline visible-sm-inline">{{t 'generic.actions'}}</span>
      {{#tooltip-element type="tooltip-basic" model=act}}
        <i class="icon-fw {{act.icon}}" alt="{{t act.label}}"></i>
      {{/tooltip-element}}
    </button>
  {{/each}}
{{/if}}
<button aria-label="{{t 'generic.moreActions'}}" aria-controls="resource-actions" class="btn btn-default btn-{{size}} more-actions" data-toggle="dropdown" data-target=".resource-actions" aria-expanded="false">
  <span class="visible-xs-inline visible-sm-inline">{{t 'generic.actions'}}</span>
  <i class="icon icon-fw icon-vertical-ellipsis" alt="{{t 'generic.moreActions'}}"></i>
</button>


