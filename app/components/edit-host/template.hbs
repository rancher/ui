<section class="horizontal-form container-fluid">
  <h2>{{#if editing}}Edit{{else}}Add{{/if}} Host</h2>
  {{top-errors errors=errors}}

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label">
      <label>Hostname</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{model.hostname}}
      <p class="help-block">As reported by the host operating system.</p>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label">
      <label>Custom Name</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{input type="text" value=primaryResource.name classNames="form-control" placeholder="e.g. dev1"}}
      <p class="help-block">If this is left empty, the Hostname will be used as the Name.</p>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label">
      <label>Description</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{textarea value=primaryResource.description classNames="form-control no-resize" rows="5" placeholder="e.g. My development host"}}
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label">
      <label class="form-control-static">Labels</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{form-user-labels
         initialLabels=originalModel.labels
         setLabels=(action 'setLabels')
      }}
    </div>
  </div>
</section>

{{save-cancel save="save" cancel="cancel"}}
