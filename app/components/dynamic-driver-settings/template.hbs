<h4>Machine Drivers</h4>
<h5>Additional <code>docker-machine</code> drivers can be loaded here and used in the Add Host screen.</h5>
<hr>

<button class="btn-circle-text r-mb10" {{action 'addNewDriver'}}><i class="icon icon-plus-circle"/> <span>Add Machine Driver</span></button>
<table class="grid fixed" style="margin-bottom: 0;">
  <thead>
    <tr>
      <th width="100">State</th>
      {{sortable-th sortable=this action="changeSort" name="name" width="175"}}
      {{sortable-th sortable=this action="changeSort" name="url" width="" label='Driver URL'}}
      {{sortable-th sortable=this action="changeSort" name="uiUrl" width="" label='UI URL'}}
      {{sortable-th sortable=this action="changeSort" name="md5" width="" label='MD5 Checksum'}}
      <th class="actions" width="50">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {{#each arranged as |driver|}}
      <tr>
        <td>{{badge-state model=driver}}</td>
        <td class="clip">{{driver.name}}</td>
        <td class="clip">
          <a href={{driver.uri}} target="_blank">{{driver.displayUrl}}</a>
        </td>
        <td class="clip">
          {{#if driver.uiUrl}}
            <a href={{driver.uiUrl}} target="_blank">{{driver.displayUiUrl}}</a>
          {{else}}
            <span class="text-muted">None</span>
          {{/if}}
        </td>
        <td>
          {{#if driver.md5checksum}}
            {{driver.md5checksum}}
          {{else}}
            <span class="text-muted">None</span>
          {{/if}}
        </td>
        <td class="clip">
          {{action-menu model=driver showPrimary=false}}
        </td>
      </tr>
    {{else}}
      <tr><td colspan="4" class="text-center text-muted">You have no Dynamic Machine Drivers.</td></tr>
    {{/each}}
  </tbody>
</table>
