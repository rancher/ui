<h4>{{t 'dynamicDriverSettings.header'}}</h4>
<h5>{{t 'dynamicDriverSettings.subtext'}}</h5>
<hr>

<button class="btn-circle-text r-mb10" {{action 'addNewDriver'}}><i class="icon icon-plus-circle"/> <span>{{t 'dynamicDriverSettings.add'}}</span></button>
<table class="grid fixed" style="margin-bottom: 0;">
  <thead>
    <tr>
      <th width="100">{{t 'dynamicDriverSettings.table.header.state'}}</th>
      {{sortable-th sortable=this action="changeSort" name="name" label=(t 'dynamicDriverSettings.table.header.name') width="175"}}
      {{sortable-th sortable=this action="changeSort" name="url" width="" label=(t 'dynamicDriverSettings.table.header.url')}}
      {{sortable-th sortable=this action="changeSort" name="uiUrl" width="" label=(t 'dynamicDriverSettings.table.header.uiUrl')}}
      {{sortable-th sortable=this action="changeSort" name="md5" width="" label=(t 'dynamicDriverSettings.table.header.md5')}}
      <th class="actions" width="50">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {{#each arranged as |driver|}}
      <tr>
        <td>{{badge-state model=driver}}</td>
        <td class="clip">{{driver.name}}</td>
        <td class="clip">
          <a href={{driver.uri}} target="_blank">{{driver.displayUrl}}</a>
        </td>
        <td class="clip">
          {{#if driver.uiUrl}}
            <a href={{driver.uiUrl}} target="_blank">{{driver.displayUiUrl}}</a>
          {{else}}
            <span class="text-muted">{{t 'generic.none'}}</span>
          {{/if}}
        </td>
        <td>
          {{#if driver.md5checksum}}
            {{driver.md5checksum}}
          {{else}}
            <span class="text-muted">{{t 'generic.none'}}</span>
          {{/if}}
        </td>
        <td class="clip">
          {{action-menu model=driver showPrimary=false}}
        </td>
      </tr>
    {{else}}
      <tr><td colspan="4" class="text-center text-muted">{{t 'dynamicDriverSettings.table.noData'}}</td></tr>
    {{/each}}
  </tbody>
</table>
