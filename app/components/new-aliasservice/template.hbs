<section class="header clearfix">
  <h1>{{t 'newAliasService.header'}} {{help-btn link="/cattle/adding-service-alias/"}}</h1>
</section>

<section class="horizontal-form container-fluid">
  {{form-name-description
    model=service
    namePlaceholder="servicePage.newAlias.form.name.placeholder"
    descriptionPlaceholder="servicePage.newAlias.form.description.placeholder"
  }}

  {{form-targets
    isBalancer=false
    existing=existing
    changed=(action "setTargets")
  }}
</section>

{{top-errors errors=errors}}
{{save-cancel save="save" cancel="cancel"}}
