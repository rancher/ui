<section class="horizontal-form container-fluid">
  {{#if justCreated}}
    <h2>{{t 'editApiKey.title.justCreated'}}</h2>
    <p>
      <label>{{t 'editApiKey.publicValue.label'}}</label>
      <h4>{{clone.publicValue}} {{copy-to-clipboard clipboardText=clone.publicValue size='small'}}</h4>
    </p>

    <p>
      <label>{{t 'editApiKey.secretValue.label'}}</label>
      <h4>{{clone.secretValue}} {{copy-to-clipboard clipboardText=clone.secretValue size='small'}}</h4>
    </p>

    <div class="alert alert-warning">
      <i class="pull-left icon icon-alert icon-3x"></i>
      <p class="r-ml50">{{t 'editApiKey.saveWarning1'}}</p>
      <p class="r-ml50">{{t 'editApiKey.saveWarning2'}}</p>
    </div>

    <div class="footer-actions">
      <button {{action "cancel"}} class="btn btn-primary">{{t 'generic.closeModal'}}</button>
    </div>
  {{else}}
    <h2>{{t (if editing 'editApiKey.title.editing' 'editApiKey.title.new')}}</h2>

    {{#if editing}}
      <div class="row">
        <div class="col-xs-12">
          <label>{{t 'editApiKey.publicValue.label'}}</label>
          <div class="form-control-static">{{originalModel.publicValue}}</div>
        </div>
      </div>
    {{/if}}

    {{form-name-description
      model=model
      namePlaceholder="editApiKey.name.placeholder"
      descriptionPlaceholder="editApiKey.description.placeholder"
    }}

    {{#unless editing}}
      <div class="row">
        <div class="col-xs-12">
          <p class="help-block">{{t 'editApiKey.noteOptional'}}</p>
        </div>
      </div>
    {{/unless}}

    {{save-cancel editing=editing save="save" cancel="cancel"}}
  {{/if}}
</section>
