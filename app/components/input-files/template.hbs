<div class="clearfix mb-20">
  {{#if header}}
    <div class="pull-left">
      <label style="margin-top: 8px;">{{t header}}</label>
      {{#if protipLabel}}
        <div class="protip">{{t protipLabel appName=settings.appName htmlSafe=true}}</div>
      {{/if}}
    </div>
  {{/if}}
  <button class="btn bg-link icon-btn pull-right" style="margin-top: 8px;" type="button" {{action "upload" }}>
    <i class="icon icon-upload text-small" />
    <span>{{t uploadActionLabel}}</span>
  </button>
  <button class="btn bg-link icon-btn pull-right mr-10" style="margin-top: 8px;" type="button" {{action "add" }}>
    <i class="icon icon-plus text-small" />
    <span>{{t addActionLabel}}</span>
  </button>
</div>

{{#each ary as |file|}}
  {{#input-text-file
       classNames="box"
       accept=accept
       classNames='mb-20'
       name=file.name
       inputName=true
       namePlaceholder=namePlaceholder
       canChangeName=true
       shouldChangeName=(not file.uploaded)
       canUpload=false
       value=file.value
       placeholder=valuePlaceholder
  }}
    <button class="btn bg-primary" type="button" {{action "remove" file}}><i class="icon icon-minus"></i></button>
  {{/input-text-file}}
{{/each}}

<input type="file" class="input-files" multiple=true accept="{{actualAccept}}" class="hide">
