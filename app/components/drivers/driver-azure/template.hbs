{{top-errors errors=errors}}

<section class="horizontal-form">
  <div class="container-fluid">
    {{partial "host/add-common"}}

    <div class="over-hr" style="margin: 20px 0;">
      <span>Account Access</span>
    </div>

    <div class="row form-group">
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">Username</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{input type="text" value=azureConfig.username classNames="form-control" placeholder="Your Azure account username"}}
      </div>
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">Password</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{input type="password" value=azureConfig.password classNames="form-control" placeholder="Your Azure account password"}}
      </div>
    </div>
    <div class="row form-group">
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">Subscription Id*</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{input type="text" value=azureConfig.subscriptionId classNames="form-control" placeholder="Your Azure subscription id"}}
      </div>
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">Subscription Cert*</label>
        {{read-text-file accept="text/*, .cer" action=(action "readFile" "subscriptionCert")}}
      </div>
      <div class="col-sm-12 col-md-3">
        {{textarea value=subscriptionCert classNames="form-control" placeholder="Your Azure subscription certificate"}}
      </div>
    </div>

    <div class="over-hr" style="margin: 20px 0;">
      <span>Instance</span>
    </div>

    <div class="row form-group">
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">Image</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{input type="text" value=azureConfig.image classNames="form-control" placeholder="Ubuntu 15.10 x64"}}
      </div>
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">Size</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{new-select
          classNames="form-control"
          content=sizeChoices
          optionLabelPath='value'
          value=azureConfig.size
        }}
      </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">SSH Port</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{input type="text" value=azureConfig.sshPort classNames="form-control" placeholder="22"}}
      </div>
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">Docker Port</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{input type="text" value=azureConfig.dockerPort classNames="form-control" placeholder="2376"}}
      </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">Docker Swarm Master Port</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{input type="text" value=azureConfig.dockerSwarmMasterPort classNames="form-control" placeholder="3376"}}
      </div>
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">Publish Settings File</label>
        {{read-text-file accept="text/*, .publishsettings" action=(action "readFile" "azureConfig.publishSettingsFile")}}
      </div>
      <div class="col-sm-12 col-md-3">
        {{textarea value=azureConfig.publishSettingsFile classNames="form-control" placeholder="Your Publish Settings file"}}
      </div>
    </div>

    <div class="over-hr" style="margin: 20px 0;">
      <span>Region</span>
    </div>

    <div class="row form-group">
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">Region</label>
      </div>
      <div class="col-sm-12 col-md-8">
        {{new-select
          classNames="form-control"
          content=regionChoices
          optionLabelPath='region'
          optionValuePath='region'
          value=azureConfig.location
        }}
      </div>
    </div>

    {{partial "host/add-options"}}

  </div>

  {{partial "save-cancel"}}
</section>
