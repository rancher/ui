{{#if loading}}
  <i class="icon icon-spinner icon-spin"></i> {{t 'generic.loading'}}
{{else}}
  {{new-select
    classNames="form-control"
    content=choices
    prompt="schema.inputService.prompt"
    optionLabelPath="name"
    optionValuePath="value"
    optionGroupPath="group"
    value=value
  }}
{{/if}}
