<div class="col span-2 form-label">
  <label>{{t 'k8s.formContainerPorts.portMap'}}</label>
</div>
<div class="col span-12">
  {{#unless editing}}
    <div>
      <button class="btn-circle" {{action "addPort"}}><i class="icon icon-plus-circle"/> {{t 'k8s.formContainerPorts.addPort'}}</button>
    </div>
  {{/unless}}

  {{#if portsArray.length}}
    <table class="table fixed no-lines no-top-padding tight small">
      <tr class="text-muted">
        <th>{{t 'generic.name'}}</th>
        <th width="30">&nbsp;</th>
        <th>{{t 'k8s.formContainerPorts.table.header.hostIp'}}</th>
        <th width="30">&nbsp;</th>
        <th>{{t 'k8s.formContainerPorts.table.header.hostPort'}}</th>
        <th width="30">&nbsp;</th>
        <th>{{t 'k8s.formContainerPorts.table.header.containerPort'}}</th>
        <th width="30">&nbsp;</th>
        <th width="60">{{t 'k8s.formContainerPorts.table.header.protocol'}}</th>
        <th width="30">&nbsp;</th>
      </tr>
      {{#each portsArray as |row|}}
        <tr>
          <td>
            {{input class="form-control input-sm" type="text" value=row.name placeholder=(t 'k8s.formContainerPorts.table.body.name')}}
          </td>

          <td class="text-center">&nbsp;</td>

          <td>
            {{input class="form-control input-sm" type="text" value=row.hostIP placeholder=(t 'k8s.formContainerPorts.table.body.hostIp')}}
          </td>

          <td class="text-center">&nbsp;</td>

          <td>
            {{input class="form-control input-sm" type="number" min="1" max="65535" value=row.hostPort placeholder=(t 'k8s.formContainerPorts.table.body.hostPort')}}
          </td>

          <td class="text-center">
            <p class="form-control-static"><i class="icon icon-chevron-right"></i></p>
          </td>

          <td>
            {{input class="form-control input-sm" type="text" value=row.containerPort placeholder=(t 'k8s.formContainerPorts.table.body.containerPortcontainerPort')}}
          </td>

          <td class="text-center">/</td>

          <td>
            {{new-select
              class="form-control input-sm"
              content=protocolOptions
              value=row.protocol
            }}
          </td>

          <td class="text-right">
            <button class="btn bg-primary btn-sm" {{action "removePort" row}}><i class="icon icon-minus"/></button>
          </td>
        </tr>
      {{/each}}
    </table>
  {{else}}
    {{#if editing}}
      <span class="text-center text-muted">{{t 'k8s.formContainerPorts.noPorts'}}</span>
    {{/if}}
  {{/if}}
</div>
