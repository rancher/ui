{{#if model.length}}
  <table class="grid fixed no-lines mb-0">
    <thead>
      <tr>
        <th>{{t 'k8s.serviceSection.name'}}</th>
        <th width="150">{{t 'generic.type'}}</th>
        <th width="150">{{t 'k8s.serviceSection.clusterIp'}}</th>
        <th width="150">{{t 'k8s.serviceSection.clusterPorts'}}</th>
        <th width="120">{{t 'k8s.serviceSection.nodePorts'}}</th>
        <th width="80">{{t 'k8s.serviceSection.pods'}}</th>
        <th>{{t 'k8s.serviceSection.selectors'}}</th>
        <th class="actions" width="85">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |svc|}}
        {{k8s/service-row model=svc}}
      {{/each}}
    </tbody>
  </table>
{{else}}
  <span class="text-muted">{{t 'k8s.serviceSection.noData'}}</span>
{{/if}}
