{{#if model.length}}
  <table class="grid fixed no-lines r-mb0">
    <thead>
      <tr>
        <th>{{t 'k8s.podSection.name'}}</th>
        <th width="150">{{t 'k8s.podSection.status'}}</th>
        <th width="150">{{t 'k8s.podSection.containers'}}</th>
        <th width="150">{{t 'k8s.podSection.hostIp'}}</th>
        <th width="150">{{t 'k8s.podSection.podIp'}}</th>
        <th class="actions" width="85">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |pod|}}
        {{k8s/pod-row model=pod}}
      {{/each}}
    </tbody>
  </table>
{{else}}
  <span class="text-muted">{{t 'k8s.podSection.noData'}}</span>
{{/if}}
