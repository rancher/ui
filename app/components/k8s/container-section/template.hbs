{{#if model.length}}
  <table class="grid fixed no-lines r-mb0">
    <thead>
      <tr>
        <th>Container Name</th>
        <th>Image</th>
        <th width="120">Status</th>
        <th>Message</th>
        <th width="75">Ready</th>
        <th width="75">Restarts</th>
        <th class="actions" width="85">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |c|}}
        {{k8s/container-row model=c}}
      {{/each}}
    </tbody>
  </table>
{{else}}
  <span class="text-muted">No Containers</span>
{{/if}}
