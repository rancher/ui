{{#if model.length}}
  <table class="grid fixed no-lines r-mb0">
    <thead>
      <tr>
        <th>{{t 'k8s.containerSection.name'}}</th>
        <th>{{t 'generic.image'}}</th>
        <th width="120">{{t 'k8s.containerSection.status'}}</th>
        <th>{{t 'k8s.containerSection.message'}}</th>
        <th width="75">{{t 'k8s.containerSection.ready'}}</th>
        <th width="75">{{t 'k8s.containerSection.restarts'}}</th>
        <th class="actions" width="85">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |c|}}
        {{k8s/container-row model=c}}
      {{/each}}
    </tbody>
  </table>
{{else}}
  <span class="text-muted">{{t 'k8s.containerSection.noData'}}</span>
{{/if}}
