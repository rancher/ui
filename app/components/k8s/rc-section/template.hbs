{{#if model.length}}
  <table class="grid fixed no-lines r-mb0">
    <thead>
      <tr>
        <th>{{t 'k8s.rcSection.name'}}</th>
        <th width="80">{{t 'k8s.rcSection.replicas'}}</th>
        <th>{{t 'k8s.rcSection.selectors'}}</th>
        <th>{{t 'k8s.rcSection.containers'}}</th>
        <th class="actions" width="85">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |rc|}}
        {{k8s/rc-row model=rc}}
      {{/each}}
    </tbody>
  </table>
{{else}}
  <span class="text-muted">{{t 'k8s.rcSection.noData'}}</span>
{{/if}}
