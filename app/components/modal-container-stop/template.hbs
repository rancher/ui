<div class="protip">{{t 'modalContainerStop.protip' alternateLabel=alternateLabel}}</div>
<hr/>
<div class="container-header-text">
  {{t 'modalContainerStop.header'}}:
  <div class="display-name">
    {{#each resources as |resource|}}
      {{resource.displayName}}
    {{/each}}
  </div>
</div>

<div class="row form-group">
  <div class="col span-2 form-label">
    <label class="form-control-static">{{t 'modalContainerStop.label'}}</label>
  </div>
  <div class="col span-4 input-group">
    {{input classNames="form-control" type="number" value=inputTimeout style="max-width:120px;"}}
    <div class="input-group-addon">{{t 'modalContainerStop.uom'}}</div>
  </div>
</div>
<div class="row help-block mb-20">
  <div class="col-sm-12">
    {{t 'modalContainerStop.helpText'  defaultTimeout=defaultTimeout}}
  </div>
</div>

<div class="footer-actions">
  <button {{action "stop"}} class="btn bg-error">{{t 'modalContainerStop.button'}}</button>
  <button {{action "cancel"}} class="btn bg-transparent">{{t 'generic.cancel'}}</button>
</div>
