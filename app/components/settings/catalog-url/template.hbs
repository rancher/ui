<h3>{{t 'catalogSettings.header'}}</h3>
<h5>{{t 'catalogSettings.subtext'}}</h5>
<hr>

<div class="row row-same-height">
  <div class="col span-6">
    <h5>{{t (if settings.isRancher 'catalogSettings.certified.header.rancher' 'catalogSettings.certified.header.pl') appName=settings.appName}}</h5>
    <div class="pt-10">
      <label class="mr-20 hand">
        {{radio-button selection=enableLibrary value=true}} {{t 'generic.enabled'}}
      </label>
      <label class="hand">
        {{radio-button selection=enableLibrary value=false}} {{t 'generic.disabled'}}
      </label>
    </div>
    <p class="help-block">
      {{#if settings.isRancher}}
        {{t 'catalogSettings.certified.detail.rancher'}}
      {{else}}
        {{t 'catalogSettings.certified.detail.pl'}}
      {{/if}}
    </p>
  </div>
  <div class="col span-6">
    <h5>{{t (if settings.isRancher 'catalogSettings.community.header.rancher' 'catalogSettings.community.header.pl') appName=settings.appName}}</h5>
    <div class="pt-10">
      <label class="mr-20 hand">
        {{radio-button selection=enableCommunity value=true}} {{t 'generic.enabled'}}
      </label>
      <label class="hand">
        {{radio-button selection=enableCommunity value=false}} {{t 'generic.disabled'}}
      </label>
    </div>
    <p class="help-block">
      {{#if settings.isRancher}}
        {{t 'catalogSettings.community.detail.rancher'}}
      {{else}}
        {{t 'catalogSettings.community.detail.pl'}}
      {{/if}}
    </p>
  </div>
</div>

<hr>

<h5>{{t 'catalogSettings.more.header'}}</h5>
<p class="help-block">{{format-html-message 'catalogSettings.more.helpText'}}</p>

<button class="btn-circle-text" {{action "add"}}><i class="icon icon-plus-circle"/> <span>{{t 'catalogSettings.more.addActionLabel'}}</span></button>

{{#if ary.length}}
  <table class="table fixed no-lines no-top-padding tight small">
    <tr class="text-muted hidden-xs hidden-sm">
      <th width="25%">{{t 'catalogSettings.more.name.label'}}</th>
      <td width="30">&nbsp;</td>
      <th width="50%">{{t 'catalogSettings.more.url.label'}}</th>
      <td width="30">&nbsp;</td>
      <th width="25%">{{t 'catalogSettings.more.branch.label'}}</th>
      <th width="30">&nbsp;</th>
    </tr>
    {{#each ary as |row|}}
      <tr>
        <td class="valign-top" data-title="{{t 'catalogSettings.more.name.label'}}:">
          {{input class="form-control input-sm name" type="text" value=row.name placeholder=(t 'catalogSettings.more.name.placeholder')}}
        </td>
        <td>&nbsp;</td>
        <td class="valign-top" data-title="{{t 'catalogSettings.more.url.label'}}:">
          {{input class="form-control input-sm" type="text" value=row.url placeholder=(t 'catalogSettings.more.url.placeholder')}}
        </td>
        <td>&nbsp;</td>
        <td class="valign-top" data-title="{{t 'catalogSettings.more.branch.label'}}:">
          {{input class="form-control input-sm" type="text" value=row.branch placeholder=(t 'catalogSettings.more.branch.placeholder')}}
        </td>

        <td class="valign-top text-right">
          <button class="btn bg-primary btn-sm" {{action "remove" row}}><i class="icon icon-minus"/><span class="sr-only">{{t 'generic.remove'}}</span></button>
        </td>
      </tr>
    {{/each}}
  </table>
{{/if}}

{{save-cancel cancelDisabled=true editing=true save="save"}}
