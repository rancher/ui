{{#if showProtip}}
  <div class="protip">
    {{t 'containerShell.protip' key=alternateLabel}}
  </div>
  <hr>
{{/if}}
<h2 class='r-mb10'><i class="icon icon-terminal"></i> {{t 'modalShell.title' instanceName=instance.displayName}}</h2>
<div class="shell-body {{if fullscreen 'shell-body--fullscreen'}}">
  {{#if fullscreen}}
    <div class="shell-body__bar">
        <span><i class="icon icon-terminal"></i> {{t 'modalShell.title' instanceName=instance.displayName}}</span>
        <button class="shell-body__bar__btn" {{action "dismiss"}} ><i class="icon icon-close"></i></button>
    </div>
  {{/if}}
</div>
<div class="footer-actions">
  <div class="console-status text-muted">{{t (concat-str 'containerShell.status' status character='.') error=error}}</div>
  {{yield}}
</div>
