{{#liquid-if loading}}
  <div class="text-center">
    <p>
      <i class="icon icon-spinner icon-spin"></i> Loading...
    </p>
  </div>
{{else}}
  <section class="horizontal-form container-fluid">
    <h2>{{#if editing}}Edit{{else}}Add{{/if}} Service</h2>
    {{top-errors errors=errors}}

    {{form-scale
      editing=true
      initialLabels=service.launchConfig.labels
      initialScale=service.scale
      setScale=(action 'setScale')
    }}

    {{form-divider}}

    {{form-name-description
      model=service
      namePlaceholder="e.g. myapp"
      descriptionPlaceholder="e.g. My application"
    }}

    {{form-divider}}

    {{form-service-links
      service=service
      allServices=allServices
      changed=(action 'setServiceLinks')
    }}
  </section>

  {{partial "save-cancel"}}
{{/liquid-if}}
