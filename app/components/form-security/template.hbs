<div class="row form-group">
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">{{t 'formSecurity.privileged'}}</label>
  </div>
  <div class="col-sm-12 col-md-3 form-label">
    <div class="checkbox form-control-static text-left">
      <label>{{input type="checkbox" checked=instance.privileged}} {{t 'formSecurity.fullAccess'}}</label>
    </div>
  </div>

  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">{{t 'formSecurity.pidMode'}}</label>
  </div>
  <div class="col-sm-12 col-md-3 form-label">
    <div class="checkbox form-control-static text-left">
      <label>{{input type="checkbox" checked=pidHost}} {{t 'formSecurity.host'}}</label>
    </div>
  </div>
</div>

<div class="row form-group">
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">{{t 'formSecurity.memoryLimit'}}</label>
  </div>
  <div class="col-sm-12 col-md-3">
    <div class="input-group">
      {{input type="number" min="1" step="1" value=memoryMb classNames="form-control" placeholder=(t 'formSecurity.placeholder.unlimited')}}
      <div class="input-group-addon">{{t 'formSecurity.mb'}}</div>
    </div>
  </div>

  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">{{t 'formSecurity.swapLimit'}}</label>
  </div>
  <div class="col-sm-12 col-md-3">
    <div class="input-group">
      {{input type="number" min="1" step="1" value=swapMb classNames="form-control" placeholder=(if memoryMb 'Unlimited' 'Requires Memory Limit') disabled=(not memoryMb)}}
      <div class="input-group-addon">{{t 'formSecurity.mb'}}</div>
    </div>
  </div>
</div>

<div class="row form-group">
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">{{t 'formSecurity.cpuPinning'}}</label>
  </div>


  <div class="col-sm-12 col-md-3">
    {{input type="text" value=instance.cpuSet classNames="form-control" placeholder=(t 'formSecurity.placeholder.egDefault')}}
  </div>
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">{{t 'formSecurity.shares'}}</label>
  </div>
  <div class="col-sm-12 col-md-3">
    {{input type="number" value=instance.cpuShares step=128 min=0 classNames="form-control" placeholder=(t 'formSecurity.placeholder.number')}}
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">{{t 'formSecurity.capabilities'}}</label>
  </div>

  <div class="col-sm-12 col-md-4">
    {{view "select" class="form-control select-cap-add" content=capabilityChoices selection=instance.capAdd multiple="true" optionValuePath="content" optionLabelPath="content"}}
  </div>

  <div class="col-sm-12 col-md-4">
    {{view "select" class="form-control select-cap-drop" content=capabilityChoices selection=instance.capDrop multiple="true" optionValuePath="content" optionLabelPath="content"}}
  </div>
</div>
<div class="row">
  <div class="col-sm-12 col-md-8 col-md-offset-2">
    <span class="help-block">
      {{t 'formSecurity.helpBlock.text'}}
      <a href="http://man7.org/linux/man-pages/man7/capabilities.7.html" target="_blank">{{t 'formSecurity.helpBlock.link'}}</a>
    </span>
  </div>
</div>

<div class="row form-group">
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">{{t 'formSecurity.deviceBinding'}}</label>
  </div>

  <div class="col-sm-12 col-md-8">
    <div class="form-control-static">
      <button class="btn-circle" {{action "addDevice"}}><i class="icon icon-plus-circle"/></button>
    </div>
    {{#if devicesArray.length}}
      <table class="table fixed no-lines no-top-padding tight small">
        <tr class="text-muted">
          <th>{{t 'formSecurity.pathHost'}}</th>
          <th width="30">&nbsp;</th>
          <th>{{t 'formSecurity.pathContainer'}}</th>
          <th width="30">&nbsp;</th>
          <th width="100">{{t 'formSecurity.permissions'}}</th>
          <th width="30">&nbsp;</th>
        </tr>
        {{#each devicesArray as |device|}}
          <tr>
            <td>
              {{input class="form-control input-sm device-host" type="text" value=device.host placeholder=(t 'formSecurity.placeholder.egsdc')}}
            </td>
            <td style="text-align: center">
              <p class="form-control-static input-sm"><i class="icon icon-chevron-right"></i></p>
            </td>
            <td>
              {{input class="form-control input-sm" type="text" value=device.container placeholder=(t 'formSecurity.placeholder.egxsdc')}}
            </td>
            <td>&nbsp;</td>
            <td>
              {{device-permissions buttonClass="btn-sm" initialSelection=device.permissions changed=(action (mut device.permissions))}}
            </td>
            <td class="text-right">
              <button class="btn btn-primary btn-sm" {{action "removeDevice" device}}><i class="icon icon-minus"/></button>
            </td>
          </tr>
        {{/each}}
      </table>
    {{/if}}
  </div>
</div>

<div class="row form-group">
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">{{t 'formSecurity.logDriver'}}</label>
  </div>

  <div class="col-sm-12 col-md-8">
    <div class="input-group">
      {{input type="text" value=instance.logConfig.driver classNames="form-control" placeholder=(t 'formSecurity.placeholder.egsyslog')}}
      <div class="input-group-btn">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="icon icon-chevron-down"></i></button>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          {{#each logDriverChoices as |value|}}
            <li><a {{action "setLogDriver" value}}>{{value}}</a></li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">{{t 'formSecurity.logOptions'}}</label>
  </div>

  <div class="col-sm-12 col-md-8">
    {{form-key-value
      initialMap=instance.logConfig.config
      changed=(action (mut instance.logConfig.config))
      addActionLabel="formSecurity.logConfig.addActionLabel"
      keyPlaceholder="formSecurity.logConfig.keyPlaceholder"
      valuePlaceholder="formSecurity.logConfig.valuePlaceholder"
    }}
  </div>
</div>
