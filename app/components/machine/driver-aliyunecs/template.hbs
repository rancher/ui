<section class="horizontal-form">
  <div class="container-fluid">

    {{partial "host/add-common"}}

    <div class="over-hr r-mt20 r-mb20">
      <span>{{t 'machine.driverAliyunecs.accountSection'}}</span>
    </div>


    <div class="row form-group">

        <div class="col-sm-12 col-md-2 form-label">
            <label class="form-control-static">{{t 'machine.driverAliyunecs.accessKey.label'}}</label>
        </div>
        <div class="col-sm-12 col-md-4">
              {{input type="text" class="form-control" value=aliyunecsConfig.accessKeyId placeholder=(t 'machine.driverAliyunecs.accessKey.placeholder')}}
        </div>

        <div class="col-sm-12 col-md-2 form-label">
            <label class="form-control-static">{{t 'machine.driverAliyunecs.accessKeySecret.label'}}</label>
        </div>
        <div class="col-sm-12 col-md-4">
              {{input type="password" class="form-control" value=aliyunecsConfig.accessKeySecret placeholder=(t 'machine.driverAliyunecs.accessKeySecret.placeholder')}}
        </div>
    </div>
      <div class="row form-group">
          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.apiEndpoint.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{input type="text" class="form-control" value=aliyunecsConfig.apiEndpoint placeholder=(t 'machine.driverAliyunecs.apiEndpoint.placeholder')}}
          </div>
      </div>

      <div class="over-hr r-mt20 r-mb20">
          <span>{{t 'machine.driverAliyunecs.instanceSection'}}</span>
      </div>
    <div class="row form-group">
        <div class="col-sm-12 col-md-2 form-label">
            <label class="form-control-static">{{t 'machine.driverAliyunecs.instanceDescription.label'}}</label>
        </div>
        <div class="col-sm-12 col-md-4">
          {{input type="text" class="form-control" value=aliyunecsConfig.description placeholder=(t 'machine.driverAliyunecs.instanceDescription.placeholder')}}
        </div>

        <div class="col-sm-12 col-md-2 form-label">
            <label class="form-control-static">{{t 'machine.driverAliyunecs.instanceType.label'}}</label>
        </div>
        <div class="col-sm-12 col-md-4">
          {{!-- {{input type="text" class="form-control" value=aliyunecsConfig.instanceType placeholder=(t 'machine.driverAliyunecs.instanceType.placeholder')}} --}}
            {{new-select
            classNames="form-control"
            content=instanceType
            optionLabelPath='description'
            optionValuePath='value'
            value=aliyunecsConfig.instanceType
            }}
            {{!-- <p class="text-small text-info"{{}}></p> --}}
        </div>
    </div>

      <div class="row form-group">
          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.systemImage.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{input type="text" class="form-control" value=aliyunecsConfig.imageId placeholder=(t 'machine.driverAliyunecs.systemImage.placeholder')}}
          </div>

          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.instanceTag.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{input type="text" class="form-control" value=aliyunecsConfig.tag placeholder=(t 'machine.driverAliyunecs.instanceTag.placeholder')}}
          </div>
      </div>

      <div class="row form-group">
          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.aliyunSLB.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{input type="text" class="form-control" value=aliyunecsConfig.slbId placeholder=(t 'machine.driverAliyunecs.aliyunSLB.placeholder')}}
          </div>

      </div>

      <div class="over-hr r-mt20 r-mb20">
          <span>{{t 'machine.driverAliyunecs.storageSection'}}</span>
      </div>

      <div class="row form-group">
          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.ioOptimized.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{!--{{input type="text" class="form-control" value=aliyunecsConfig.ioOptimized placeholder=(t 'machine.driverAliyunecs.ioOptimized.placeholder')}}--}}
            {{new-select
            classNames="form-control"
            content=ioOptimized
            optionLabelPath='value'
            value=aliyunecsConfig.ioOptimized
            }}
          </div>

          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.systemDiskCategory.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{!-- {{input type="text" class="form-control" value=aliyunecsConfig.systemDiskCategory placeholder=(t 'machine.driverAliyunecs.systemDiskCategory.placeholder')}} --}}
            {{new-select
            classNames="form-control"
            content=systemDiskCategory
            optionLabelPath='value'
            value=aliyunecsConfig.systemDiskCategory
            }}
          </div>
      </div>

      <div class="row form-group">
          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.dataDiskCategory.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{!-- {{input type="text" class="form-control" value=aliyunecsConfig.diskCategory placeholder=(t 'machine.driverAliyunecs.dataDiskCategory.placeholder')}} --}}
            {{new-select
            classNames="form-control"
            content=dataDiskCategory
            optionLabelPath='value'
            value=aliyunecsConfig.diskCategory
            }}
          </div>

          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.dataDiskSize.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
              <div class="input-group">
                {{input type="text" class="form-control" value=aliyunecsConfig.diskSize placeholder=(t 'machine.driverAliyunecs.dataDiskSize.placeholder')}}
                  <div class="input-group-addon">GB</div>
              </div>
          </div>
      </div>

      <div class="row form-group">
          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.region.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{!-- {{input type="text" class="form-control" value=aliyunecsConfig.region placeholder=(t 'machine.driverAliyunecs.region.placeholder')}} --}}
            {{new-select
            classNames="form-control"
            content=regions
            optionLabelPath='value'
            value=aliyunecsConfig.region
            }}
          </div>

          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.zone.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{input type="text" class="form-control" value=aliyunecsConfig.zone placeholder=(t 'machine.driverAliyunecs.zone.placeholder')}}
          </div>
      </div>

      <div class="over-hr r-mt20 r-mb20">
          <span>{{t 'machine.driverAliyunecs.networkSection'}}</span>
      </div>

      <div class="row form-group">
          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.routeCIDR.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{input type="text" class="form-control" value=aliyunecsConfig.routeCidr placeholder=(t 'machine.driverAliyunecs.routeCIDR.placeholder')}}
          </div>

          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.vpcId.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{input type="text" class="form-control" value=aliyunecsConfig.vpcId placeholder=(t 'machine.driverAliyunecs.vpcId.placeholder')}}
          </div>
      </div>

      <div class="row form-group">
          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.vswitchId.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{input type="text" class="form-control" value=aliyunecsConfig.vswitchId placeholder=(t 'machine.driverAliyunecs.vswitchId.placeholder')}}
          </div>

          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.privateIp.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{input type="text" class="form-control" value=aliyunecsConfig.privateIp placeholder=(t 'machine.driverAliyunecs.privateIp.placeholder')}}
          </div>
      </div>

      <div class="row form-group">
          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.privateAddressOnly.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            <label class="form-control-static">{{input type="checkbox" checked=aliyunecsConfig.privateAddressOnly}}</label>
          </div>
          {{#if (not aliyunecsConfig.privateAddressOnly)}}
          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.internetMaxBandwidth.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
              <div class="input-group">
            {{input type="text" class="form-control" value=aliyunecsConfig.internetMaxBandwidth placeholder=(t 'machine.driverAliyunecs.internetMaxBandwidth.placeholder')}}
                  <div class="input-group-addon">Mbps</div>
              </div>
          </div>
          {{/if}}
      </div>

      <div class="over-hr r-mt20 r-mb20">
          <span>{{t 'machine.driverAliyunecs.securitySection'}}</span>
      </div>
      <div class="row form-group">
          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.securityGroup.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{input type="text" class="form-control" value=aliyunecsConfig.securityGroup placeholder=(t 'machine.driverAliyunecs.securityGroup.placeholder')}}
          </div>

          <div class="col-sm-12 col-md-2 form-label">
              <label class="form-control-static">{{t 'machine.driverAliyunecs.sshPassword.label'}}</label>
          </div>
          <div class="col-sm-12 col-md-4">
            {{input type="password" class="form-control" value=aliyunecsConfig.sshPassword placeholder=(t 'machine.driverAliyunecs.sshPassword.placeholder')}}
          </div>
      </div>



    {{partial "host/add-options"}}
  </div>


  {{top-errors errors=errors}}


  {{save-cancel save="save" cancel="cancel"}}
</section>