<div class="row">
  <div class="col span-2 form-label">
    <label>{{t 'formTarget.target'}}</label>
  </div>
  <div class="col span-4 radio">
    <label>{{radio-button selection=which value="ip"}} {{t 'formTarget.pointAddress'}}</label>
  </div>
  <div class="col span-4 radio">
    <label>{{radio-button selection=which value="hostname"}} {{t 'formTarget.pointHostname'}}</label>
  </div>
</div>

{{#if (eq which "ip")}}
  <div class="row">
    <div class="col span-8 offset-2">
      <button class="btn-circle" {{action "addTargetIp"}}><i class="icon icon-plus-circle"/> {{t 'formTarget.addTarget'}}</button>
    </div>
  </div>
  <div class="row">
    <div class="col span-8 offset-2">
      {{#if targetIpArray.length}}
        <table class="table fixed no-lines no-top-padding tight">
          {{#each targetIpArray as |tgt|}}
            <tr>
              <td>
                {{input type="text" class="form-control input-sm target-ip" value=tgt.value placeholder="e.g. 192.168.2.24"}}
              </td>
              <td width="30" class="text-right">
                <button class="btn bg-primary btn-sm" {{action "removeTargetIp" tgt}}><i class="icon icon-minus"/></button>
              </td>
            </tr>
          {{/each}}
        </table>
      {{/if}}
    </div>
  </div>
{{/if}}

{{#if (eq which "hostname")}}
  <div class="row">
    <div class="col span-8 offset-2">
      {{input type="text" class="form-control input-sm target-hostname" value=userHostname placeholder="e.g. mysql.example.com"}}
    </div>
  </div>
{{/if}}
