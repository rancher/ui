  {{else}}
    {{#input-or-display editable=editing value=(get quota key) classesForDisplay="clip"}}
      {{input-number min=0 value=(get quota key) placeholder=(t (concat "formResourceQuota.table." key ".placeholder"))}}
    {{/input-or-display}}
  {{/if}}