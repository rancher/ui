        {{input-integer min="4" step="1" value=(get quota key) classNames="form-control" placeholder=(t (concat "formResourceQuota.table." key ".memoryPlaceholder"))}}
        <div class="input-group-addon bg-default">{{t "generic.mibibyte"}}</div>
