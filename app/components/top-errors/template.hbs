<div class="banner-icon">
  <i class="icon icon-alert"></i>
</div>
<div class="banner-message">
  <ul class="list-unstyled">
    {{#each errors as |error|}}
      {{#if (is-array error)}}
        {{#each error as |line|}}
          <li>{{line}}</li>
        {{/each}}
      {{else}}
        <li>{{error}}</li>
      {{/if}}
    {{/each}}
  </ul>
</div>
