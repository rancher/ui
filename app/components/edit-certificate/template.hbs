<section class="horizontal-form container-fluid">
  <h2>{{t 'editCertificate.title'}}</h2>

  {{form-name-description
    model=primaryResource
    nameRequired=true
    namePlaceholder="editCertificate.name.placeholder"
    descriptionPlaceholder="editCertificate.description.placeholder"
  }}

  <div class="row">
    <div class="alert alert-info">{{t 'editCertificate.noteKeyWriteOnly'}}</div>
  </div>

  {{input-certificate model=model}}
</section>

{{top-errors errors=errors}}
{{save-cancel editing=true save="save" cancel="cancel"}}
