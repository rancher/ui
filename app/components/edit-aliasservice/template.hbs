{{#liquid-if loading}}
  <div class="text-center">
    <p>
      <i class="icon icon-spinner icon-spin"></i> Loading...
    </p>
  </div>
{{else}}
  <section class="horizontal-form container-fluid">
    <h2>Edit Service Alias</h2>
    {{top-errors errors=errors}}

    {{form-name-description
      model=service
      namePlaceholder="e.g. MyApp"
      descriptionPlaceholder="e.g. Current version of MyApp"
    }}

    {{form-divider}}

    {{form-targets
      isBalancer=false
      existing=existing
      allServices=allServices
      changed=(action "setTargets")
    }}
  </section>

  {{partial "save-cancel"}}
{{/liquid-if}}
