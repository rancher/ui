<section class="horizontal-form container-fluid">
  <h2>{{t 'editStack.title'}}</h2>
  {{top-errors errors=errors}}

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label">
      <label>{{t 'editStack.name.label'}}</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{input type="text" value=primaryResource.name classNames="form-control" placeholder=(t 'editStack.description.placeholder')}}
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label">
      <label>{{t 'editStack.description.label'}}</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{textarea value=primaryResource.description classNames="form-control no-resize" rows="5" placeholder=(t 'editStack.description.placeholder')}}
    </div>
  </div>
</section>

{{save-cancel save="save" cancel="cancel"}}
