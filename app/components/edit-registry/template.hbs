<section class="horizontal-form container-fluid">
  <h2>{{t 'editRegistry.title'}}</h2>
  {{top-errors errors=errors}}
</section>

<section class="horizontal-form container-fluid">
  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label form-control-static">
      <label>{{t 'editRegistry.address.label'}}</label>
    </div>
    <div class="col-sm-12 col-md-8">
      <div class="form-control-static">{{model.registry.serverAddress}}</div>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label form-control-static">
      <label>{{t 'editRegistry.email.label'}}*</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{input type="text" class="form-control email" value=model.credential.email placeholder=(t 'editRegistry.email.placeholder')}}
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label form-control-static">
      <label>{{t 'editRegistry.username.label'}}</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{input type="text" class="form-control" value=model.credential.publicValue placeholder=(t 'editRegistry.username.placeholder')}}
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label form-control-static">
      <label>{{t 'editRegistry.password.label'}}</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{input type="password" class="form-control" value=model.credential.secretValue placeholder=(t 'editRegistry.password.placeholder')}}
    </div>
  </div>
</section>

{{save-cancel editing=editing save="save" cancel="cancel"}}
