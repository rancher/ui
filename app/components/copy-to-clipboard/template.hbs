{{#if isSupported}}
  {{#tooltip-element type="tooltip-basic" model=model.tooltipText tooltipTemplate='tooltip-static' class="copy-button-container" textChangedEvent=textChangedEvent baseClass="copy-clipboard" isCopyTo=true}}
    {{#copy-button class=buttonClasses clipboardTarget=target clipboardText=clipboardText success='alertSuccess'}}
      <i class="icon icon-copy"></i> {{buttonText}}
    {{/copy-button}}
  {{/tooltip-element}}
{{/if}}
