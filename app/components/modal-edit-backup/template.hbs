{{top-errors errors=errors}}

<h2>{{t (if editing 'modalEditBackup.edit' 'modalEditBackup.create')}}</h2>

<div class="form-group">
  <label>{{t 'modalEditBackup.nameLabel'}}*</label>
  {{input class="form-control" value=backupName }}
</div>

<div class="form-group">
  <label>{{t 'modalEditBackup.backupTarget'}}*</label>
    {{new-select
      classNames="form-control"
      prompt="modalEditBackup.backupTargetPlaceholder"
      content=backupTargets
      optionValuePath="id"
      optionLabelPath="name"
      value=backupTarget
    }}
</div>


{{save-cancel editing=editing save="saveBackup" cancel="cancel"}}
