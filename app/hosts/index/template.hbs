<section class="header">
  <h1>{{t 'hostsPage.index.header'}}</h1>

  {{#link-to "hosts.new" classNames="btn btn-sm btn-primary"}}{{t 'hostsPage.index.addHost'}}{{/link-to}}

  <div class="btn-group pull-right">
    {{tooltip-link icon="icon-ellipsis" text=(t 'hostsPage.index.tooltip.listView') options=listLinkOptions}}
    {{tooltip-link icon="icon-layeredgroup" text=(t 'hostsPage.index.tooltip.groupedView') options=groupLinkOptions}}
  </div>
</section>

{{#columns-section pods=pods emptyMessage=(t 'hostsPage.index.columns.emptyMessage') as |item| }}
  {{#if item.isPendingMachine}}
    {{host-pod model=item.machine mode=mode newContainer="newContainer"}}
  {{else}}
    {{host-pod model=item mode=mode newContainer="newContainer"}}
  {{/if}}
{{/columns-section}}
